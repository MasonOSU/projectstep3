<form>
    <label>Research Paper </label><select>
        <option disabled selected value>Select</option>
        <option>Anglo-Saxon Class Dynamics and Migration</option>
        <option>An Overview of Antipsychotic Drug Kinetics</option>
        <option>Celtic Tradition in Beowulf</option>
        <option>Grapefruit Juice Interactions with Antipsychotic Medicine</option>
        <option>Schizophrenia Treatment Models</option>
        </select>
    <label>Author </label><select>
        <option disabled selected value>Select</option>
        <option>Robert Ball</option>
        <option>Nina Faulkner</option>
        <option>John Smith</option>
        <option>Sandra Smith</option>
        <option>Maria Thompson</option>
    </select>
    <input type="submit">
</form>

<table>
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.research_paper_author_id}}</td>
            <td>{{this.research_paper_id}}</td>
            <td>{{this.author_id}}</td>
            <td><button>Edit</button></td>
            <td><button>Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
