<h2>Add a new discipline:</h2>
<p>To add a new discipline, please enter the field below and click 'Submit'!</p>
<form>
  <legend>Add discipline</legend>
  <label>Field </label><input type="text" />
  <input type="submit" />
</form>

<table>
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.discipline_id}}</td>
            <td>{{this.field}}</td>
            {{!-- <td><button>Edit</button></td>
            <td><button>Delete</button></td> --}}
        </tr>
        {{/each}}
    </tbody>
</table>