<table>
  <thead>
    <tr>
      {{#each data.[0]}}
        <th>
          {{@key}}
        </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td>{{this.institution_id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.address}}</td>
        <td>{{this.country}}</td>
        <td>{{this.website}}</td>
        {{!-- <td><button>Edit</button></td>
        <td><button>Delete</button></td> --}}
      </tr>
    {{/each}}
  </tbody>
</table>

<h2>Add an Institution</h2>
<p>To add a new institution please enter the information below and click 'Submit'!</p>
<form>
  <legend>Add institution</legend>
  <label>Name </label><input type="text" />
  <label>Address </label><input type="text" />
  <label>City </label><input type="text" />
  <label>Country </label><input type="text" />
  <label>Website </label><input type="url" />
  <input type="submit" />
</form>